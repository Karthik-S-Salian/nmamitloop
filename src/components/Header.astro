<header>
    <a href="/nmamitloop/"><h2>NMAMITLOOP</h2></a>

    <nav>
        <a href="/nmamitloop/">Home</a>
        <a href="/nmamitloop/#footer" class="footer-link">About</a>

        <button class="install">Install</button>
    </nav>
</header>

<style>
    header {
        width: 100%;
        display: flex;
        padding: 1rem 5%;
        align-items: center;
        justify-content: space-between;
        background-color: rgb(53, 53, 53);
    }

    header > h1 {
        font-size: 1.2rem;
    }

    .install {
        border-radius: 20px;
        background-color: rgb(119, 0, 255);
        padding: 0.35em 1.1em;
        font-weight: 600;
    }

    header nav {
        display: none;

        & a {
            transition: all 0.2s ease-in;
        }

        & a:hover {
            text-shadow:
                0 0 5px #fff,
                0 0 10px #fff,
                0 0 15px #fff,
                0 0 20px gold,
                0 0 35px gold,
                0 0 40px gold,
                0 0 60px gold,
                0 0 90px gold;
        }
    }

    @media (min-width: 450px) {
        header nav {
            display: flex;
            align-items: center;
            gap: 1rem;
        }
    }
</style>

<script>
    interface PromptEvent extends Event {
        //fake interface to shutup type error
        userChoice: {
            outcome: string;
        };
        prompt(): void;
    }

    const footerLink = document.querySelector(".footer-link");
    const footer = document.getElementById("footer");
    footerLink?.addEventListener("click", function (event) {
        event.preventDefault();

        footer?.scrollIntoView({ behavior: "smooth" });
    });

    let deferredPrompt: PromptEvent | null;
    window.addEventListener("beforeinstallprompt", (e) => {
        deferredPrompt = e as PromptEvent;
    });

    const installApp = document.querySelector(".install");
    installApp?.addEventListener("click", async () => {
        if (deferredPrompt !== null) {
            deferredPrompt.prompt();
            const { outcome } = await deferredPrompt.userChoice;
            if (outcome === "accepted") {
                deferredPrompt = null;
            }
        }
    });
</script>
