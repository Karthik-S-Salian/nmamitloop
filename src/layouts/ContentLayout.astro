---
import Layout from "./Layout.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
    <div id="root">
        <slot />
    </div>
</Layout>

<style is:global>
    #root {
        width: 100%;
		height: 100%;
        padding: 1rem;
    }
    main {
        width:100%;
        max-width: 700px;
        margin: 2rem auto;
    }
</style>
